<div class="block glow">
    <div class="col-md-8 mx-auto">
        <div class="card transparente blanco">
            <div class="card-header mt-3 text-center">
                Cambiar Perfil
            </div>
            <div class="card-body">
                <form action="/editPerfil" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Ingresa tu nombre" value="{{nombre}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Ingresa Email" value="{{correo}}">
                    </div>
                    <div class="form-outline">
                    <input type="tel" name="phone" placeholder="phone" value="{{telefono}}" class="form-control form-control mb-3" />
                    </div>

                    <button class="btn btn-primary btn-block">
                        Submit
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>