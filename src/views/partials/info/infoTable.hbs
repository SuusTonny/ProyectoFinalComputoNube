{{#if infos}}
<table class="table table-bordered table-hover bg-secondary text-white">
    <thead>
        <tr>
            <th>titulo</th>
            <th>Informacion</th>
        </tr>
    </thead>
    <tbody>
        {{#each infos}}
        <tr>
            <td>{{titulo}}</td>
            <td>{{informacion}}</td>
            <td>

                            
                <a href="/editInfo/{{_id}}" class="btn btn-info"><span>Editar</span><i></i></a>
                <a href="/deleteInfo/{{_id}}" class="btn btn-danger"><span>Eliminar</span><i></i></a>
                
            </td> 
                    
        </tr>  
        
    {{/each}}
    </tbody>
</table>
{{else}}
    <div class="h-100 d-flex align-items-center justify-content-center">
        <div>
            <h1 class="text-center blanco">No hay informacion</h1>
            <img src="/icons/empty_task_3.jpg" class="w-50">
        </div>
    </div>
        
{{/if}}