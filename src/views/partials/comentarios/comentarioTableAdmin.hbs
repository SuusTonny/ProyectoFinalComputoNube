{{#if comentarios}}
<table class="table table-bordered table-hover bg-secondary text-white">
    <thead>
        <tr>
            <th>N.</th>
            <th>Nombre</th>
            <th>Descripcion</th>
        </tr>
    </thead>
    <tbody>
        {{#each comentarios}}
        <tr>
            <td>{{@index}}</td>
            <td>{{nombre}}</td>
            <td>{{descripcion}}</td>
            <td>

                            
                <a href="/editComentario/{{_id}}" class="btn btn-info">Editar</a>
                <a href="/deleteComentario/{{_id}}" class="btn btn-danger">Eliminar</a>
                
            </td> 
                    
        </tr>  
        
    {{/each}}
    </tbody>
</table>
{{else}}
    <div class="h-100 d-flex align-items-center justify-content-center">
        <div>
            <h1 class="text-center blanco">No hay comentarios</h1>
            <img src="/icons/empty_task_3.jpg" class="w-50">
        </div>
    </div>
        
{{/if}}