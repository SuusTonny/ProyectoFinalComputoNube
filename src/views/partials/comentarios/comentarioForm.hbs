<div class="card card-body p-4 rounded-0 bg-dark text-white">
    <h3>Inserta una sugerencia</h3>
    <form action="/comentarios/add" method="POST">
        <div>
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" placeholder="Ingresa un Nombre" id="nombre" class="form-control rounded-0 bg-dark text-white">
        </div>
        <div>
            <label for="descripcion">Descripcion</label>
            <textarea name="descripcion" id="descripcion" placeholder="Inserta una descripcion" class="form-control rounded-0 bg-dark text-white"></textarea>
        </div>
        <button class="btn btn-outline-success btn-sm mt-2">Agregar</button>    
    </form>
</div>
