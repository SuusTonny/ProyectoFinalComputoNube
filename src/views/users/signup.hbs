<div class="block glow">
    <div class="col-md-8 mx-auto">
        <div class="card transparente blanco">
            <div class="card-header mt-3 text-center">
                REGISTRAR NUEVA CUENTA
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Ingresa tu nombre" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Ingresa Email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Ingresa tu Contraseña">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Confirma tu Contraseña">
                    </div>
                    <div class="form-outline">
                    <input type="tel" name="phone" placeholder="phone" value="{{phone}}" class="form-control form-control mb-3" />
                    </div>
      
                  
                   <h6 class="mb-2 pb-1">Perfil: </h6>
      
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="perfil" id="admin" value="1" />
                        <label class="form-check-label" for="admin">Admin</label>
                    </div>
      
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="perfil" id="usuario" value="0" />
                        <label class="form-check-label" for="usuario">Usuario</label>
                    </div>

                    <button class="btn btn-primary btn-block">
                        Submit
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>